#!/bin/sh

[ -z $@ ] && echo "Need compatible arg" && exit
while getopts "udoisSrRe" o
do case "${o}" in
        R) CMD='reload' ;;
        S) CMD='stop' ;;
        d) CMD='down' ;;
        e) CMD='exit' ;;
        i) CMD='status' ;;
        o) CMD='once' ;;
        r) CMD='restart' ;;
        s) CMD='start';;
        u) CMD='up' ;;
        *) printf "Invalid option: -%s\\n" "$OPTARG" ;;
esac done

service=$(find "$HOME/.local/service/" -maxdepth 1 -mindepth 1 | fzf)
sv "$CMD" "$service"
