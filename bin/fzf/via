#!/bin/sh

DIR="$HOME/.cache/via"
CACHE="$DIR/database"
LAST="$DIR/history"
MENU="dmenu_def -i -l 15"
DATABASE="$HOME/.local/updatedb"

build_cache_all() {
    locate -d "$DATABASE" -ri "$HOME/.*$" >"$CACHE-all"
}

clean_last_all() {
    printf '' >"$LAST-all"
}

open_all() {
    cache="$(cat "$CACHE-all")"
    last="$(cat "$LAST-all")"
    file="$(printf "%s\n%s" "$last" "$cache" | $MENU)"
    [ -z "$file" ] && exit
    exec opener "$file"
}

build_cache_docs() {
    locate -d "$DATABASE" -ri "$HOME/.*.pdf$" | sed "s@$HOME@"'~''@; /~\/\..*$/d' >"$CACHE-docs"
    # locate -d "$DATABASE" -ri "$HOME/.*.pdf$" >"$CACHE-docs"
}

clean_last_docs() {
    printf '' >"$LAST-docs"
}

open_docs() {
    cache="$(cat "$CACHE-docs")"
    last="$(cat "$LAST-docs")"

    if [ -n "$last" ]; then
        file="$(printf "%s\n%s" "$last" "$cache" | $MENU)" || exit
    else
        file="$(printf "%s" "$cache" | $MENU)" || exit
    fi

    grep -q "$file" "$LAST-docs" ||
        printf "%s\n" "$file" >>"$LAST-docs"

    exec setsid -f "$READER" "$file"
}

search() {
    locate -d "$DATABASE" -ri "$HOME/.*$1.*" | fzf -e
    exec opener "$file"
}

while getopts "ACDRabcde:o:r" option; do
    case "${option}" in
        A) build_cache_all && open_all ;;
        C) clean_last_all ;;
        D) build_cache_all ;;
        R) build_cache_docs && reader ;;
        a) open_all ;;
        b)
            build_cache_all
            build_cache_docs
            ;;
        c) clean_last_docs ;;
        d) build_cache_docs ;;
        e) search "$OPTARG" ;;
        o) export READER="$OPTARG" ;;
        r) open_docs ;;
        *) open_all ;;
    esac
done
