#!/bin/sh

[ -z "$1" ] && echo "Missing arguments" && exit

case $1 in
    toggle) echo cycle pause | socat - "/tmp/mpvsocket" ;;
    next) echo playlist-next | socat - "/tmp/mpvsocket" ;;
    prev) echo playlist-prev | socat - "/tmp/mpvsocket" ;;
    seek) echo seek "$2" | socat - "/tmp/mpvsocket" ;;
esac
