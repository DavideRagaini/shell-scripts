#!/bin/sh

pidof -q spotifyd &&
	CHOSEN="Sptui"

mpc status 2>/dev/null | grep -q playing &&
	CHOSEN="Local"

[ -z $CHOSEN ] &&
	CHOSEN="$(printf 'Spotify\nLocal' | fzf --cycle --border --margin 10% --padding 10% --header='Choose music source')"

case "$CHOSEN" in
	Spotify)
		spotifyd &&
			exec spotify-tui ;;
	ncmpcpp)
		exec ncmpcpp ;;
	Local)
		exec ncmpcpp ;;
	Sptui)
		exec spotify-tui ;;
esac
