#!/bin/sh

SINKS_LIST="$(wpctl status | awk '/Sinks:/{flag=1;next}/Sink/{flag=0}flag' | grep -v '\*' | cut -c 11- | grep -v '^[[:space:]]*$')"
if [ "$(echo "$SINKS_LIST" | wc -l)" -lt 2 ]; then
	ID_CHOSEN="$(echo "$SINKS_LIST" | cut -f1 -d'.')"
else
	CHOSEN=$(echo "$SINKS_LIST" | ddmenu -i -l 5 -p "Sink:") ||
		exit
	ID_CHOSEN=$(echo "$CHOSEN" | cut -f1 -d'.')
fi
wpctl set-default "$ID_CHOSEN"

