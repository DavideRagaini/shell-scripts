#!/bin/sh

list="/etc/hosts.list"
cat > "$list" <<EOF
url="https://hosts.ubuntu101.co.za/hosts"
output="/etc/hosts1"
url="http://sbc.io/hosts/alternates/fakenews-gambling-porn/hosts"
output="/etc/hosts2"
url="https://hosts.ubuntu101.co.za/hosts.deny"
output="/etc/hosts.deny"
url="https://hosts.ubuntu101.co.za/superhosts.deny"
output="/etc/superhosts.deny"'
EOF

echo 'Downloading hosts'
curl --parallel --parallel-immediate --parallel-max 4 --config $list
cat "/etc/hosts1" >"/etc/hosts"
cat "/etc/hosts2" >>"/etc/hosts"
