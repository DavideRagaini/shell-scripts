#!/bin/sh

PATH_TO_VIDEOS="${XDG_VIDEOS_DIR:-$HOME/Storage/Videos}"
if [ -n "$1" ];
   then
        FILE=$(readlink -f "$1")

        rm "$PATH_TO_VIDEOS/eDVP"
        ln -s "$FILE" "$PATH_TO_VIDEOS/eDVP"
        notify-send "eDVP set to " "$(readlink "$PATH_TO_VIDEOS/eDVP" | cut -d / -f8)"
else
    notify-send "eDVP set to " "$(readlink "$PATH_TO_VIDEOS/eDVP" | cut -d / -f8)"
fi
