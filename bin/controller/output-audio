# CHOSEN=$(printf "%s" "$NAMES" | sed 's/^.*$ //p' | dmenu -i -l 10 -p "Sink:"|| exit 0) #"Select sink to output:"
# OUTPUT=$(echo "$CHOSEN" | awk '{print $1}' )


