#!/bin/sh

# [ -z "$@" ] && @="play-pause"
instances="$(playerctl -a -i spotifyd metadata --format "{{playerName}} -> {{status}}  {{title}} - {{artist}} {{album}}" | sed 's/Playing/奈/ ; s/Paused//' | nl -w2 -s' ')"

# Just one istance of whatever player 
[ "$(echo "$instances" | wc -l)" -eq 1 ] && playerctl -p "$(echo "$instances" | awk '{print $2}')" play-pause && exit

chosen="$(echo "$instances" | dmenu -l 5)" || exit
howmany=$(echo "$instances" | grep -c "$(echo "$chosen" | awk '{print $2}')")
if [ $howmany -eq 1 ]
then
    #  If there are more players elegible
    playerctl -p "$(echo "$chosen" | awk '{print $2}')" "$@"
else
    # If there is more then 1 instances of the same player
    player="$(playerctl -l | dmenu -l 5)"
    playerctl -p "$player" play-pause
fi

