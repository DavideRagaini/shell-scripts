#!/bin/sh

CURRENT="$HOME/.cache/current_theme"

dark_theme() {
    sed -i 's/light/dark/' ~/.config/alacritty/alacritty.yml
    xrdb -override ~/.config/x11/Xresources
    emacsclient --eval '(load-theme (quote modus-vivendi))'
    # qutebrowser :"set colors.webpage.darkmode.enabled true;; restart"
    echo dark > "$CURRENT"
}

light_theme () {
    sed -i 's/dark/light/' ~/.config/alacritty/alacritty.yml
    xrdb -override ~/.config/x11/Xresources_Light
    emacsclient --eval '(load-theme (quote leuven))'
    # qutebrowser :"set colors.webpage.darkmode.enabled false;; restart"
    echo light > "$CURRENT"
}

toggle_theme() {
    if [ "$(cat ~/.cache/current_theme)" = 'dark' ]; then
        light_theme
    else
        dark_theme
    fi
}

case "$1" in
    dark) dark_theme ;;
    light) light_theme ;;
    toggle) toggle_theme ;;
    *) toggle_theme ;;
esac
