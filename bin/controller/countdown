#!/bin/bash

countdown() {
	date1=$(($(date +%s) + $1))
	while [ "$date1" -ge "$(date +%s)" ]; do
		## Is this more than 24h away?
		days=$(($(($((date1 - $(date +%s))) * 1)) / 86400))
		echo -ne "$days day(s) and $(date -u --date @$((date1 - $(date +%s))) +%H:%M:%S)\r"
		sleep 1
	done
}

countdown "$1" &&
	mpv --loop-file --no-config ~/Storage/Inukshuk.flac
