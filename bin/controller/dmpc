#!/bin/sh

if [ -z "$(pidof spotifyd)" ] && [ "$(playerctl -l | grep spotifyd)" ]
then
	case "$1" in
	toggle) mpc --host=127.0.0.1 --port=6600 toggle ;;
	next) mpc --host=127.0.0.1 --port=6600 next ;;
	prev) mpc --host=127.0.0.1 --port=6600 prev ;;
	seekf) mpc --host=127.0.0.1 --port=6600 seekthrough 10 ;;
	seekp) mpc --host=127.0.0.1 --port=6600 seekthrough -10 ;;
	esac
else
	mpc pause
	case "$1" in
	toggle) playerctl -p spotifyd play-pause ;;
	next) playerctl -p spotifyd next ;;
	prev) playerctl -p spotifyd previous ;;
	seekf) playerctl -p spotifyd position 10+ ;;
	seekp) playerctl -p spotifyd position 10- ;;
	esac
fi
