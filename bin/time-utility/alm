#!/bin/sh
# TODO Label/Message vengono tagliati allo spazio
# TODO checks orario

export TS_SOCKET=/tmp/alm
export TS_SLOTS=20

HOURS=0
MINUTES=0
SECONDS=0
HTIME=0
DMENU=0
ALL=0
ALARM="${XDG_VIDEOS_DIR:-$HOME/Storage/Videos}/alarm"
EXEC_CMD="mpv --no-config --force-window=yes --osc=no --hwdec=auto-safe --no-resume-playback --loop-file=2 $ALARM"

uts2date() {
    HTIME="$(date -d @"$1")"
}

epoch() {
    UTS="$(date -d "$1" +%s)"
    EPOCH="$((UTS - $(date +%s)))"
    HOURS=$((EPOCH / 3600))
    MINUTES=$(((EPOCH / 60) % 60))
    SECONDS=$((EPOCH % 60))
}

dmenu_prompt() {
    echo | ddmenu -p "$1"
}

check_args() {
    if [ $# -eq 0 ] ||
        [ -z "$ARGS" ] ||
        [ $((HOURS + MINUTES + SECONDS)) -eq 0 ]
    then
        if [ $DMENU -eq 0 ]; then
            if [ -z "$TIME" ]; then
                # printf 'Time: '
                # read -r TIME
                printf 'Hour: '
                read -r H
                printf 'Minute: '
                read -r M
                TIME="$H:$M"
            fi
            [ -z "$TIME" ] &&
                echo "ERROR: Invalid time" &&
                exit 1

            if [ -z "$LABEL" ]; then
                printf 'Label: '
                read -r LABEL
            fi

            if [ -z "$ALL" ]; then
                if [ -z "$MESSAGE" ]; then
                    printf 'Message: '
                    read -r MESSAGE
                fi

                if [ -z "$SNOOZE" ]; then
                    printf 'Snooze? '
                    read -r SNOOZE
                    case "$SNOOZE" in
                        '1'|y|yes) SNOOZE=1 ;;
                        '0'|n|no|*) SNOOZE=0 ;;
                    esac
                fi

                printf 'Exec: '
                read -r EXEC_CMD_IN
            fi
        else
            TIME="$(dmenu_prompt "Time:")"
            [ -z "$TIME" ] &&
                notify-send "ERROR: Invalid time" &&
                exit
            LABEL="$(dmenu_prompt "Label:")"

            if [ -z "$ALL" ]; then
                MESSAGE="$(dmenu_prompt "Message:")"
                EXEC_CMD_IN="$(dmenu_prompt "Exec:")"
            fi
        fi
        epoch "$TIME"
        if [ -n "$EXEC_CMD_IN" ]; then
            EXEC_CMD="$EXEC_CMD_IN"
        fi
    fi
}

check_time_format() {
    if [ -z "$EPOCH" ]; then
        [ -z "$HOURS" ] && [ -z "$MINUTES" ] && [ -z "$SECONDS" ] && exit
        TIME=$((HOURS * 3600 + MINUTES * 60 + SECONDS))
    else
        TIME=$EPOCH
    fi
}

help() {
    cat <<EOF
Alarm HELP

Usage: alm ...
where:
    h) HOURS=OPTARG ;;
    m) MINUTES=OPTARG ;;
    s) SECONDS=OPTARG ;;
    S) SNOOZE=1 ;;
    l) LABEL=OPTARG ;;
    e) EXEC_CMD="OPTARG" ;;
    E) SLEEP_TIME=1 ;;
    a) ALL=1 ;;
    d) DMENU=1 ;;
    M) MESSAGE="OPTARG" ;;
    q) shift && ts "\$\@" && exit ;;
    ? | *) help ;;
EOF
    exit 0
}

ARGS=''
while getopts "?h:m:s:l:t:e:M:S:EaqdS" arg; do
    case "$arg" in
        h) HOURS=$OPTARG ;;
        m) MINUTES=$OPTARG ;;
        s) SECONDS=$OPTARG ;;
        S) SNOOZE=1 ;;
        l) LABEL=$OPTARG ;;
        e) EXEC_CMD="$OPTARG" ;;
        E) SLEEP_TIME=1 ;;
        a) ALL=1 ;;
        d) DMENU=1 ;;
        M) MESSAGE="$OPTARG" ;;
        q) shift && ts "$@" && exit ;;
        ? | *) help ;;
    esac
    ARGS=1
done

check_args "$@"
check_time_format
uts2date "$(($(date '+%s') + TIME))"

if [ ! $DMENU -eq 0 ]; then
    notify-send "ALARM: $LABEL" "Message: $MESSAGE\nCountdown: "$HOURS":$MINUTES:$SECONDS\n$HTIME"
  else
    printf "Countdown: %s:%s:%s\n%s\nID: " "$HOURS" "$MINUTES" "$SECONDS" "$HTIME"
fi

ts -L "($HTIME) $LABEL" sh -c "almd $UTS ${SLEEP_TIME:-30} ${SNOOZE:-0}E ${LABEL:-[empty]} ${MESSAGE:-[empty]} $EXEC_CMD"
