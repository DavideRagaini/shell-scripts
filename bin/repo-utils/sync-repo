#!/bin/sh

RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

SRC_PATH="$HOME/.local/src"
SRC_REPOS="dotfiles
shell-scripts
dwm
dwmblocks-async
dwmblocks
startpage
st
dmenu"

ORG="$HOME/Org"

case "$1" in
	all)
        echo "${RED}Pulling from:${YELLOW} Org ${NC}"
        git -C "$ORG" pull

        for i in $SRC_REPOS; do
            echo "${RED}Pulling from:${YELLOW} $i ${NC} "
            git -C "$SRC_PATH/$i" pull
            echo
        done
        ;;
	mains)
        echo "${RED}Pulling from:${YELLOW} dotfiles ${NC}"
        git -C "$SRC_PATH/dotfiles" pull

        echo "${RED}Pulling from:${YELLOW} shell-scripts ${NC}"
        git -C "$SRC_PATH/shell-scripts" pull

        echo "${RED}Pulling from:${YELLOW} Org ${NC}"
        git -C "$ORG" pull
        ;;
	*)
		echo "sync what?" ;;
esac
