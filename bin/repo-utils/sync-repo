#!/bin/sh

RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color
MINE=0

SRC_PATH="$HOME/.local/src"

SRC_REPOS_MINE="dotfiles
shell-scripts
dwm
startpage"

SRC_REPOS_OTHERS="st
dwmblocks
dwmblocks-async
dmenu"

ORG="$HOME/Org"

push() {
    [ -d "$1" ] &&
        echo "${RED}Pushing:${YELLOW} "$1" ${NC}" &&
        git -C "$1" push &&
        echo
}

pull() {
    [ -d "$1" ] &&
        echo "${RED}Pulling from:${YELLOW} "$1" ${NC}" &&
        git -C "$1" pull &&
        echo
}

case "$1" in
	pull) OPR='pull'; MINE=145 ;;
	push) OPR='push' ;;
	*) echo "Operation?" ;;
esac

case "$2" in
	all)
        $OPR "$ORG"
        for i in $SRC_REPOS_MINE; do
            $OPR "$SRC_PATH/$i"
        done
        if [ $MINE -eq 145 ]; then
            for i in $SRC_REPOS_OTHERS; do
                $OPR "$SRC_PATH/$i"
            done
        fi
        ;;
	mains)
        $OPR "$SRC_PATH/dotfiles"
        $OPR "$SRC_PATH/shell-scripts"
        $OPR "$ORG"
        ;;
	*)
		echo "sync what?" ;;
esac
