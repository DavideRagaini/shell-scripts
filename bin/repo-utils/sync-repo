#!/bin/sh

RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

SRC_PATH="$HOME/.local/src"
SRC_REPOS="dotfiles
shell-scripts
dwm
dwmblocks-async
dwmblocks
startpage
st
dmenu"

ORG="$HOME/Org"

pull() {
    [ -d "$1" ] &&
        echo "${RED}Pulling from:${YELLOW} "$1" ${NC}" &&
        git -C "$1" pull &&
        echo
}

case "$1" in
	all)
        pull "$ORG"
        for i in $SRC_REPOS; do
            pull "$SRC_PATH/$i"
        done
        ;;
	mains)
        pull "$SRC_PATH/dotfiles"
        pull "$SRC_PATH/shell-scripts"
        pull "$ORG"
        ;;
	*)
		echo "sync what?" ;;
esac
