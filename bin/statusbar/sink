#!/bin/sh

case $BLOCK_BUTTON in
    1) setsid "$TERMINAL" -e pulsemixer ;;
    3) notify-send "GPU Info" "$(nvidia-smi)" ;;
esac

pactl list sinks | grep -E 'Sink #|Description' | sed 's/Description: //g; s/\t//g' | fmt -w 200 | sed ':b;s/Sink #/\n/2;tb; s/Sink #//g' | awk '{print $1 " " $2}' | grep "$(pactl list short sinks | grep RUNNING | awk '{print $1}') "
