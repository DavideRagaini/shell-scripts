#!/bin/sh

case $BLOCK_BUTTON in
    1) $TERMINAL -e nmtui ;;
    3) pgrep -x dunst >/dev/null && notify-send "🌐 Internet module" "\- Click to connect
📡: no wifi connection
📶: wifi connection with quality
❎: no ethernet
🌐: ethernet working
" ;;
esac

[ "$(wifi | awk '{print $3}')" = "on" ] &&
    wifiicon="" &&
    signal=" $(awk '/s*w/ {print int($3 * 100 / 70) "%" }' /proc/net/wireless) "
printf "[ %s%s%s]" "$wifiicon" "$signal" "$(sed "s/down/❎/;s/up/🌐/;s/unknown//" /sys/class/net/e*/operstate)"
