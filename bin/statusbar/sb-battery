for battery in /sys/class/power_supply/BAT?*; do
	[ -n "${capacity+x}" ] && printf " "
	capacity=$(cat "$battery/capacity")
	case "$(cat "$battery/status")" in
		"Full") status="âš¡" ;;
		"Discharging")
			case "$capacity" in
				100 | 9[0-9]) status='ï‰€' ;;
				8[0-9] | 7[0-9])
					status='ï‰'
					notify-send "Unplug AC"
					;;
				6[0-9] | 5[0-9]) status='ï‰‚' ;;
				4[0-9] | 3[0-9])
					status='â—ï‰ƒ'
					notify-send "Plug AC"
					;;
				2[0-9] | 1[0-9]) status='â—ï–‚' ;;
			esac
			;;
		"Charging") status="ï‡¦" ;;
		"Not charging") status="ğŸ›‘" ;;
		"Unknown") status="ï¥‹" ;;
	esac
	printf "[%s%sï£¯ %s]" "$status" "$capacity" "$(acpi | awk '{print $5}')"
done && exit 0
