#!/bin/sh

case $BLOCK_BUTTON in
	3) notify-send "🔋 Battery module" "🔋: discharging
🛑: not charging
♻: stagnant charge
🔌: charging
⚡: charged
❗: battery very low!
- Scroll to change adjust xbacklight." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

for battery in /sys/class/power_supply/BAT?*; do
	[ -n "${capacity+x}" ] && printf " "
	capacity=$(cat "$battery/capacity")
	case "$(cat "$battery/status")" in
		"Full") status="⚡" ;;
		"Discharging")
			case "$capacity" in
				100 | 9[0-9]) status='' ;;
				8[0-9] | 7[0-9])
					status=''
					notify-send "Unplug AC"
					;;
				6[0-9] | 5[0-9]) status='' ;;
				4[0-9] | 3[0-9])
					status='❗'
					notify-send "Plug AC"
					;;
				2[0-9] | 1[0-9]) status='❗' ;;
			esac
			;;
		"Charging") status="" ;;
		"Not charging") status="🛑" ;;
		"Unknown") status="屢" ;;
	esac
	printf "[%s%s %s]" "$status" "$capacity" "$(acpi | awk '{print $5}')"
done && exit 0
