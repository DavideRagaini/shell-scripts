#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "Song" "$(mpc status)" ;;
	3) mpc toggle ;;
	4) mpc prev ;;
	5) mpc next ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if [ "$(mpc status | sed -n 2p | awk '{print $1}')" = "[playing]" ]; then
	printf "[%.95s]" "$(mpc current -f "ï´ %artist% ï€ %title% ï» %album%")"
else
	printf "[ğŸµ]"
fi
