#!/bin/sh

case $BLOCK_BUTTON in
    1) notify-send "Song" "$(mpc status)" ;;
    3) mpc toggle ;;
    4) mpc prev ;;
    5) mpc next ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if [ "$(mpc status | awk 'NR==2 {print $1}')" = "[playing]" ]; then
    printf "[%.95s]" "$(mpc current -f "Ô¥Å %artist% ÔÄÅ %title% Ôûª %album%")"
else
    printf "[üéµ]"
fi
