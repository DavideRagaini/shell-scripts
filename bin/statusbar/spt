#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "Song" "$(playerctl -p spotifyd metadata --format "ﴁ {{artist}} 阮 {{title}}  {{album}}")" ;;
	3) playerctl play-pause ;;
	4) playerctl next ;;
	5) playerctl previuos ;;
esac

[ "$(playerctl -p spotifyd status)" = "Playing" ] &&
	printf "%.45s" "$(playerctl -p spotifyd metadata --format "阮{{title}}ﴁ{{artist}}{{album}}")"
