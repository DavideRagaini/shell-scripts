#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#date +%c
# date '+%a %d/%B/%y %I:%M%p'
# date '+%I:%M:%S%p'
case "$(date '+%I')" in
	01) icon="ğŸ•" ;;
	02) icon="ğŸ•‘" ;;
	03) icon="ğŸ•’" ;;
	04) icon="ğŸ•“" ;;
	05) icon="ğŸ•”" ;;
	06) icon="ğŸ••" ;;
	07) icon="ğŸ•–" ;;
	08) icon="ğŸ•—" ;;
	09) icon="ğŸ•˜" ;;
	10) icon="ğŸ•™" ;;
	11) icon="ğŸ•š" ;;
	12) icon="ğŸ•›" ;;
esac

printf "[%s%s]" "$icon" "$(date '+%I:%M%p')"
